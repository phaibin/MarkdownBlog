<article class="post">
  <header>
    <h2><%= article.title %></h2>
    <span class="date"><%= article.show_date %></span>
  </header>

  <section class="tag">
    <% if article.tags %>
      <% for tag in article.tags %>
      <a href="/tags/<%= tag %>">#<%= tag %></a>
      <% end %>
    <% end %>
  </section>

  <section class="content">
    <%= article.body %>
  </section>
  <hr>
  <section class="navigator">
    <% if article.left %>
    <p>上一篇：<a href="<%= article.left.path %>"><%= article.left.title %></a></p>
    <% end %>
    <% if article.right %>
    <p>下一篇：<a href="<%= article.right.path %>"><%= article.right.title %></a></p>
    <% end %>
  </section>

  <section class="comments">
    <% if disqus %>
      <div id="disqus_thread"></div>
      <script type="text/javascript" src="http://disqus.com/forums/<%= disqus %>/embed.js"> </script>
      <noscript><a href="http://<%= disqus %>.disqus.com/?url=ref">View the discussion thread.</a></noscript>
      <a href="http://disqus.com" class="dsq-brlink">blog comments powered by <span class="logo-disqus">Disqus</span></a>
    <% end %>
  </section>
</article>

